---
import Waves from "../components/Waves.astro";

type Props = {
	title?: string;
	description?: string;
	children: any;
};

const BASE_TITLE = "Souvlaki42";

const { title, description = "My corner of the internet" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta title={title ? `${title} - ${BASE_TITLE}` : BASE_TITLE} />
		<title>{title ? `${title} - ${BASE_TITLE}` : BASE_TITLE}</title>
		<style is:global>
			* {
				@apply m-0 box-border p-0;
			}
		</style>
	</head>
	<body class="flex min-h-screen flex-col items-center justify-center bg-mocha">
		<slot>Nothing is here. Maybe this page doesn't exist yet.</slot>
		<Waves />
	</body>
</html>
