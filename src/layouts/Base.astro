---
import { SITE_DESCRIPTION, SITE_NAME } from "astro:env/server";
import { ClientRouter } from "astro:transitions";
import Header from "~/components/Header.astro";
import { cn, type HTMLAtrributesWithSlot } from "~/lib/utils";
import "~/styles/global.css";
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";

export type Props = HTMLAtrributesWithSlot<"main"> & {
  title?: string;
  description?: string;
};
const {
  title = SITE_NAME,
  description = SITE_DESCRIPTION,
  class: className,
  ...props
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <ClientRouter />
  </head>
  <body class="bg-mocha flex p-8 h-screen flex-col items-center justify-center">
    <Header />
    <main
      {...props}
      class={cn(
        "flex w-full flex-col p-8 flex-1 h-full align-middle items-center text-center text-isabelline",
        className,
      )}
    >
      <slot />
      <Analytics />
      <SpeedInsights />
    </main>
    <footer class="text-isabelline font-semibold text-center">
      Â© Ilias Moulas {new Date().getFullYear()}
    </footer>
    {
      import.meta.env.DEV ? (
        <div class="fixed bottom-1 left-1 z-50 flex h-6 w-6 items-center justify-center rounded-full bg-gray-800 p-3 font-mono text-xs text-white">
          <div class="block sm:hidden">xs</div>
          <div class="hidden sm:block md:hidden">sm</div>
          <div class="hidden md:block lg:hidden">md</div>
          <div class="hidden lg:block xl:hidden">lg</div>
          <div class="hidden xl:block 2xl:hidden">xl</div>
          <div class="hidden 2xl:block">2xl</div>
        </div>
      ) : undefined
    }
  </body>
</html>
