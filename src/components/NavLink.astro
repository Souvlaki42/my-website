---
import type { JSX } from "astro/jsx-runtime";
import { cn } from "~/lib/utils";

type Props = Exclude<JSX.AnchorHTMLAttributes, "children">;
const { href, class: className, ...props } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---

<a
  {...props}
  href={href}
  class={cn(
    "text-sky-blue hover:text-light-blue font-bold underline mx-2",
    pathname === href ? "text-blue-500 hover:text-blue-400" : undefined,
    className,
  )}><slot /></a
>
