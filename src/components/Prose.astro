---
import { cn, type HTMLAtrributesWithSlot } from "~/lib/utils";

type Props = HTMLAtrributesWithSlot<"div">;
const { class: className, ...props } = Astro.props;
---

<div
  {...props}
  class={cn(
    "prose dark:prose-invert prose-h1:font-bold prose-h1:text-xl prose-a:text-blue-600 prose-p:text-justify prose-img:rounded-xl prose-headings:underline",
    className,
  )}
>
  <slot />
</div>
