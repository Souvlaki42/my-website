---
import { cn, type HTMLAtrributesWithSlot } from "~/lib/utils";

type Props = HTMLAtrributesWithSlot<"a">;
const { href, class: className, ...props } = Astro.props;
const pathName = new URL(Astro.request.url).pathname;
---

<a
  href={href}
  {...props}
  class={cn(
    "font-bold mx-2 sm:mx-4",
    pathName === href ? "text-blue-500" : "text-sky-blue hover:text-light-blue",
    className,
  )}><slot /></a
>
