---
import BaseLayout from "@/layouts/Base.astro";

const title = "Page Not Found";
const description = "Sorry, we couldn't find the page you're looking for.";
---

<BaseLayout title={title} description={description}>
  <section
    class="flex flex-col items-center justify-center h-screen text-center text-white"
  >
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <p class="text-xl mb-8">{description}</p>
    <a
      href="/"
      class="bg-sky-500 hover:bg-sky-700 text-white font-semibold py-2 px-4 rounded"
    >
      Go Back Home
    </a>
  </section>
</BaseLayout>
